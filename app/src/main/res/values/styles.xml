<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="gamemodeSelectView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:onClick">selectGamemode</item>
    </style>

    <style name="ImageSelectView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

        <item name="android:onClick">selectImage</item>
    </style>

    <style name="SquareGameMenuButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_margin">20px</item>
        <item name="android:background">@color/squareGameButtonColor</item>
    </style>

</resources>
